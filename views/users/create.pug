extends ../layouts/common

block content

 h1 Create user

 if errors
  each error in errors
   .alert.alert-danger= error

 form(action="/users/create", method="POST")
  .form-group
   label(for="name") Name
   input#name.form-control.mb-3(type="text", name="name", value=values ? values.name : '')
   label(for="phone") Phone
   input#phone.form-control.mb-3(type="tel", name="phone", value=values ? values.phone : '')
   input.btn.btn-primary(type="submit" value="Create")